# Fantasy Football Assistant Configuration
APP_NAME="Fantasy Football Assistant"
APP_VERSION="0.1.0"
DEBUG=False

# Database Configuration
DATABASE_URL="sqlite:///./fantasy_football.db"

# Security
SECRET_KEY="your-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# External APIs
ANTHROPIC_API_KEY="your_anthropic_api_key_here"
ESPN_API_KEY="your_espn_api_key_here"

# ESPN Service Integration (Node.js microservice)
ESPN_SERVICE_URL="http://localhost:3001"
ESPN_SERVICE_API_KEY="your_secure_api_key_here"

# Yahoo Fantasy OAuth Configuration
YAHOO_CLIENT_ID="your_yahoo_client_id_here"
YAHOO_CLIENT_SECRET="your_yahoo_client_secret_here"
YAHOO_REDIRECT_URI="http://localhost:8000/api/yahoo/auth/callback"

# Server settings
HOST="0.0.0.0"
PORT=6001

# Logging
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"

# Cache settings
CACHE_EXPIRE_TIME=3600

# Fantasy football settings
CURRENT_NFL_SEASON=2024
DEFAULT_LEAGUE_SIZE=12

# Development/Testing settings
USE_MOCK_DATA=False  # Set to True to use mock data instead of live API calls